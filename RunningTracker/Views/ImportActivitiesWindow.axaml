<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:RunningTracker.ViewModels"
		mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="RunningTracker.Views.ImportActivitiesWindow"
        Title="ImportActivitiesWindow"
		TransparencyLevelHint="AcrylicBlur"
		Background="Transparent"
		ExtendClientAreaToDecorationsHint="True"
		Width="400" Height="150"
	    WindowStartupLocation="CenterOwner">

	<Design.DataContext>
		<vm:ImportActivitiesWindowViewModel/>
	</Design.DataContext>

	<Panel>
		<ExperimentalAcrylicBorder IsHitTestVisible="False">
			<ExperimentalAcrylicBorder.Material>
				<ExperimentalAcrylicMaterial BackgroundSource="Digger"
											 TintColor="Black"
											 TintOpacity="1"
											 MaterialOpacity="0.65" />
			</ExperimentalAcrylicBorder.Material>
		</ExperimentalAcrylicBorder>
		<StackPanel Margin="10">
			<TextBlock Margin="0 5" Foreground="LightGray">Find Activites</TextBlock>
			<Button Command="{Binding LoadActivitiesCommand}" Content="Load Activities" Foreground="LightGray"/>
			<TextBox Watermark="Fit File Path" Text="{Binding FitFilePath}"/>
			<StackPanel Orientation="Horizontal">
				<Button Command="{Binding OkCommand}" Content="OK" Foreground="LightGray"/>
				<Button Command="{Binding CancelCommand}" Content="Cancel" Foreground="LightGray"/>
			</StackPanel>
		</StackPanel>	
	</Panel>
</Window>
